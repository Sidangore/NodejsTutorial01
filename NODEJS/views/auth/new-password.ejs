<%- include('../includes/head.ejs') %>
    </head>

    <body>
        <%- include('../includes/navigation.ejs') %>
            <div class="container" style="align-items: center;">
                <h1 class="display-6" style="text-align: center;">Login</h1>
                <% if (errorMessage && errorMessage != "")  { %>
                    <div class="alert alert-danger" role="alert" style="width: 45%; margin-left: auto; margin-right: auto; text-align: center;">
                        <%= errorMessage %>
                    </div>
                    <% } else if (successMessage && successMessage != "") { %>
                        <div class="alert alert-success" role="alert" style="width: 45%; margin-left: auto; margin-right: auto; text-align: center;">
                            <%= successMessage %>
                        </div>
                        <% } %>
            </div>
            <div class="container d-flex justify-content-center">
                <div class="card border-dark mb-3 " style="width: 45%;">
                    <div class="card-body text-dark">
                        <form method="POST" action="/new-password">
                            <div class="mb-3">
                                <label for="password" class="form-label">New Password</label>
                                <input type="text" name="password" class="form-control" id="password">
                            </div>
                            <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                            <input type="hidden" name="userID" value="<%= userID %>">
                            <input type="hidden" name="passwordToken" value="<%= passwordToken %>">
                            <button type="submit" class="btn btn-primary">Confirm Password</button>
                        </form>
                    </div>
                </div>
            </div>
            <%- include('../includes/end.ejs') %>
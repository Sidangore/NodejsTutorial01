    <body>
        <%- include('../includes/navigation.ejs') %>
            <div class="container">
                <% if (orders.length <= 0) {  %>
                    <h1 class="display-6" style="text-align: center;">No Orders</h1>
                    <% } else { %>
                        <h1 class="display-6" style="text-align: center;">My Recent Orders</h1>
                        <div class="container">
                            <div class="row row-cols-1 row-cols-md-3 g-3">
                                <% orders.forEach(order => { let subtotal = 0; %>
                                    <div class="col">
                                        <div class="card border-dark mb-3">
                                            <div class="card-header">Order ID #
                                                <%= order._id %>
                                            </div>
                                            <div class="card-body text-dark">
                                                <!-- <h5 class="card-title">Dark card title</h5> -->
                                                <% order.items.forEach(product => { %>
                                                    <div class="row">
                                                        <div class="col">
                                                            <%= product.title %>
                                                        </div>
                                                        <div class="col">
                                                            x
                                                            <%= product.quantity %>
                                                        </div>
                                                        <div class="col">
                                                            Rs.
                                                            <%= product.quantity * +product.price%>
                                                                <% subtotal += product.quantity * +product.price%>
                                                        </div>
                                                    </div>
                                                    <% }); %>
                                                        <hr>
                                                        <div class="col align-self-end">
                                                            <strong>Subtotal: Rs. <%= subtotal %></strong>
                                                        </div>
                                            </div>
                                        </div>
                                    </div>
                                    <% }); %>
                            </div>
                            <% } %>
                        </div>
                        <%- include('../includes/end.ejs') %>